<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit Purchase Order form -->
        <record id="view_purchase_order_form_cfe_location" model="ir.ui.view">
            <field name="name">purchase.order.form.cfe.location</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Insert field next to 'Partner' -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="cfe_project_location_id"
                           options="{'no_create': True}"
                           placeholder="Select CFE Project Location"/>
                    <field name="production_id"/>
                    <field name="bom_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
