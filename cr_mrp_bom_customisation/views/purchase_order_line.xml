<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the Purchase Order Line tree view -->
    <record id="view_purchase_order_line_tree_inherit_bom_link" model="ir.ui.view">
        <field name="name">purchase.order.line.tree.inherit.bom.link</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="bom_line_ids" optional="show"/>
                <field name="bom_id"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit the Purchase Order Line form view -->
    <record id="view_purchase_order_line_form_inherit_bom_link" model="ir.ui.view">
        <field name="name">purchase.order.line.form.inherit.bom.link</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="bom_line_ids"/>
                <field name="bom_id"/>
            </xpath>
        </field>
    </record>
</odoo>
