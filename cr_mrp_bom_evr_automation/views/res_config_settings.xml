<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <!-- Insert inside the main MRP app -->
                <xpath expr="//block[@name='process_operations_setting_container']" position="after">

                    <!-- YOUR NEW CUSTOM BLOCK -->
                    <block title="EVR Purchase Flow Scheduler" name="evr_purchase_flow_settings"
                           groups="mrp.group_mrp_manager">

                        <setting string="Cron Interval Number"
                                 help="Number of units (minutes/hours/days) between each cron execution">
                            <field name="evr_purchase_interval_number"/>
                        </setting>

                        <setting string="Cron Interval Type" help="Choose how frequently the cron should execute">
                            <field name="evr_purchase_interval_type"/>
                        </setting>

                        <!-- Button to open the cron -->
                        <div class="mt16">
                            <button type="object"
                                    name="action_open_evr_cron"
                                    string="View Scheduled Action"
                                    class="btn btn-secondary"/>
                        </div>

                    </block>


                </xpath>

            </field>
        </record>

