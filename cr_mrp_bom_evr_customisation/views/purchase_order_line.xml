<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_purchase_order_line_form_inherit_component_branch" model="ir.ui.view">
        <field name="name">purchase.order.line.form.component.branch</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_form2"/>
        <field name="arch" type="xml">

            <!-- Insert next to product -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="component_branch_id"/>
                <field name="component_customer_po_id"/>
                <field name="component_vendor_po_id"/>
            </xpath>

        </field>
    </record>

</odoo>