<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_stock_location_helpers_tree" model="ir.ui.view">
        <field name="name">stock.location.helpers.tree</field>
        <field name="model">cr.mrp.bom.branch.location.helper</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="parent_location_id"/>
                <field name="branch_name"/>
                <field name="location_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_stock_location_helpers_form" model="ir.ui.view">
        <field name="name">stock.location.helpers.form</field>
        <field name="model">cr.mrp.bom.branch.location.helper</field>
        <field name="arch" type="xml">
            <form string="Location Helper">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="branch_name"/>
                        <field name="parent_location_id"/>
                        <field name="location_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu + Action -->
    <record id="action_stock_location_helpers" model="ir.actions.act_window">
        <field name="name">Location Helpers</field>
        <field name="res_model">stock.location.helpers</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_stock_location_helpers_root"
              name="Location Helpers"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_stock_location_helpers"/>
</odoo>
