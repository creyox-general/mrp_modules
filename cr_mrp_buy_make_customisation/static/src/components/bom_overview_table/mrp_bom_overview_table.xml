<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
<t t-inherit="mrp.BomOverviewTable"
   t-inherit-mode="extension"
   t-name="cr_mrp_buy_make_customisation.BomOverviewAddBranchColumn">

   <xpath expr="//th[@name='th_mrp_bom_h']" position="after">
            <th t-if="data.is_evr" class="text-center">Critical</th>
       <th t-if="data.is_evr and  props.showOptions.buyMakeSelection" class="text-center">Buy/Make</th>

   </xpath>

    <xpath expr="//th[@name='th_used']" position="after">
                 <t t-if="data.is_evr and showPurchaseGroup">
                     <th class="text-end">Lost</th>
                </t>
    </xpath>

</t>
</templates>

