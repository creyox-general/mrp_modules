<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Branch Tree View - Add CRITICAL -->
    <record id="view_mrp_bom_line_branch_tree_critical" model="ir.ui.view">
        <field name="name">mrp.bom.line.branch.tree.critical</field>
        <field name="model">mrp.bom.line.branch</field>
        <field name="inherit_id" ref="cr_mrp_bom_evr_customisation.view_mrp_bom_line_branch_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_id']" position="after">
                <field name="critical" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <!-- Branch Form View -->
    <record id="view_mrp_bom_line_branch_form_critical" model="ir.ui.view">
        <field name="name">mrp.bom.line.branch.form.critical</field>
        <field name="model">mrp.bom.line.branch</field>
        <field name="inherit_id" ref="cr_mrp_bom_evr_customisation.view_mrp_bom_line_branch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_id']" position="after">
                <field name="critical" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>