<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_bom_line_tree_inherit_buy_make" model="ir.ui.view">
        <field name="name">mrp.bom.line.tree.inherit.buy.make</field>
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="is_buy_make_product" invisible="True"/>
                <field name="buy_make_selection"
                       readonly="not is_buy_make_product"
                       required="is_buy_make_product"/>
                <field name="critical" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_bom_form_inherit_critical" model="ir.ui.view">
        <field name="name">mrp.bom.form.critical</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/list/field[@name='product_id']" position="after">
                <field name="critical" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>