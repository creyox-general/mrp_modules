<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Manufacturing Order Form View -->
    <record id="view_mrp_production_form_inherit_critical" model="ir.ui.view">
        <field name="name">mrp.production.form.critical</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">

            <!-- Add critical to component lines -->
            <xpath expr="//field[@name='move_raw_ids']/list/field[@name='product_id']" position="after">
                <field name="critical" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>


</odoo>